<?xml version="1.0" encoding="UTF-8"?>
<packages>
<package
    id="K-lite-mcp"
    name="K-Lite Mega Codec Pack"
    revision="%version%.1"
    priority="59" 
    reboot="false" >
    
    <variable name="versioncourt" value="950" />
    <variable name="version" value="9.5.0" />
    <!-- declaration des variables generales - merci se3 -->
    <variable name="PROGRAMFILES" value="%PROGRAMFILES%" architecture="x86"/>
    <variable name="PROGRAMFILES" value="%PROGRAMFILES(X86)%" architecture="x64"/>
    
    <!-- dl=http://www.free-codecs.com/download_soft.php?d=7012&s=42&r= -->
    <eoledl dl="http://www.free-codecs.com/download_soft.php?d=7012&amp;s=42&amp;r=" destname="k-lite\K-Lite_Codec_Pack_%versioncourt%_Mega.exe" />
  
    <check type='uninstall' condition='exists' path='K-Lite Mega Codec Pack %version%' />
  
    <install cmd='"%SOFTWARE%\k-lite\K-Lite_Codec_Pack_%versioncourt%_Mega.exe" /verysilent /norestart' />
  
    <upgrade include='install' />
  
    <remove cmd='"%ProgramFiles%\K-Lite Codec Pack\unins000.exe" /verysilent /norestart' />
  
</package>
</packages>
