<?xml version="1.0" encoding="UTF-8"?>
<packages>
<package
    id="Xcas"
    name="Xcas : Le couteau suisse des Mathematiques"
    revision="%version%.1"
    priority="50"
    reboot="false">
    
    <variable name="version" value="0.9.9" />    
    
    <!--  dl=http://www-fourier.ujf-grenoble.fr/~parisse/giac/xcasinst.exe -->
